<div class="w3-black" id="tour">
  <div class="w3-container w3-content w3-padding-64" style="max-width:800px">
    <h2 class="w3-wide w3-center">Results</h2>

    <div class="w3-row-padding w3-padding-32" style="margin:0 -16px">
      <% @matches&.take(21)&.each do |match| %>
        <div class="w3-third w3-margin-bottom">
          <div class="w3-container w3-white"><br>
            <p><b><%= "#{match.name} ( #{match.home_team_score}-#{match.away_team_score} )" %></b></p>
            <p class="w3-opacity"><%= match.start_time.strftime("%d-%m-%Y  %T") %></p>
            <p><%= match.season.name %></p>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
