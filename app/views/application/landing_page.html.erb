<div class="w3-black" id="tour">
  <div class="w3-container w3-content w3-padding-64" style="max-width:800px">
    <h2 class="w3-wide w3-center">Upcoming matches</h2>
    <p class="w3-opacity w3-center"><i>Remember to book your tickets!</i></p><br>

    <div class="w3-row-padding w3-padding-32" style="margin:0 -16px">
      <% Match.active.where(season_id: Season.active.ids).order(:start_time)&.take(20)&.each do |match| %>
        <div class="w3-third w3-margin-bottom">
          <div class="w3-container w3-white"><br>
            <div style="height: 40px;"><b><%= match.name %></b></div>
            <p class="w3-opacity"><%= match.start_time.strftime("%d-%m-%Y  %T") %></p>
            <p><%= match.season.name %></p>
            <%= link_to 'Buy Tickets', customer_orders_path(match_id: match.id), class: "w3-button w3-black w3-margin-bottom" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
